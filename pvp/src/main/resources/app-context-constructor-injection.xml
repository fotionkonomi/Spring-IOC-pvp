<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="personConstructorArg" class="pvp.constructorInjection.Person">
		<constructor-arg value="1" />
		<constructor-arg value="FirstNameConstructorArg" />
		<constructor-arg value="LastNameConstructorArg" />
	</bean>
	
	<bean id="personCNamespace" class="pvp.constructorInjection.Person" c:id="2" c:firstName="FirstNameCNamespace" c:lastName="LastNameCNamespace"  />


</beans>